{
	"name": "copilot-with-context",
	"displayName": "Copilot with context",
	"publisher": "JeroenV",
	"description": "",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "git://github.com/username/repository.git"
	},
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:copilot-with-context.addSelectedTextAsSnippet",
		"onCommand:copilot-with-context.pasteSnippetAsCommentUsingPopupAsInput",
		"onCommand:copilot-with-context.pasteSnippetAsCommentUsingCursorAsInput",
		"onCommand:copilot-with-context.removeSnippetsFromFile",
		"onCommand:copilot-with-context.pasteSymbolUsingSelectedTextAsInput",
		"onCommand:copilot-with-context.pasteSymbolUsingPopupAsInput",
		"onCommand:copilot-with-context.pasteSymbol",
		"onCommand:copilot-with-context.rewriteRestOfFunction",
		"onCommand:copilot-with-context.copyLineWithContext",
		"onCommand:copilot-with-context.fixFunction"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "copilot-with-context.addSelectedTextAsSnippet",
				"title": "Copilot: Add selected text to the copilot snippet file to be used later"
			},
			{
				"command": "copilot-with-context.pasteSnippetAsCommentUsingPopupAsInput",
				"title": "Copilot: Paste copilot snippet as a comment above your cursor using a popup as input"
			},
			{
				"command": "copilot-with-context.pasteSnippetAsCommentUsingCursorAsInput",
				"title": "Copilot: Paste copilot snippet as a comment above your cursor using the word before your cursor as input"
			}, 
			{
				"command": "copilot-with-context.removeSnippetsFromFile",
				"title": "Copilot: Remove all copilot comment snippets from the current file"
			},
			{
				"command": "copilot-with-context.pasteSymbolUsingSelectedTextAsInput",
				"title": "Copilot: paste a symbol from your workspace [Selected Text]"
			},
			{
				"command": "copilot-with-context.pasteSymbolUsingPopupAsInput",
				"title": "Copilot: paste a symbol from your workspace [Popup]"
			},
			{
				"command": "copilot-with-context.pasteSymbol",
				"title": "Copilot: paste a symbol from your workspace [Cursor Position]"
			},
			{
				"command": "copilot-with-context.rewriteRestOfFunction",
				"title": "Copilot: Rewrite the rest of the function below your cursor"
			},
			{
				"command": "copilot-with-context.copyLineWithContext",
				"title": "Copilot: Copy line above with context"
			},
			{
				"command": "copilot-with-context.fixFunction",
				"title": "Copilot: Fix function"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.68.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"esbuild": "^0.14.46",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2"
	}
}
